    "@types/knex": "^0.16.1",
    "@types/node": "^18.15.12",
    "copy-webpack-plugin": "^11.0.0",
    "cross-fetch": "^3.1.5",
    "html-webpack-plugin": "^5.5.1",
    "jest": "^29.5.0",
    "jest-environment-jsdom": "^29.5.0",
    "jsdom": "^21.1.1",
    "ts-jest": "^29.1.0",
    "ts-loader": "^9.4.2",
